		int num = 0;
		int sum = 0;

		public void keyTyped(keyEvent e){
			char key = e.getKeyChar();
			if (checkKey(key) != -1){
				switch (flag){
				case 0:sum += checkKey(key) ;
				case 1:sum -= checkKey(key) ;
				case 2:sum /= checkKey(key) ;
				case 3:sum *= checkKey(key) ;

				}
			}			

			lb2.setText("ŒvZ‚ÌŒ‹‰Ê:"+sum);
			lb3.setText(flag);
			
			repaint();
		}
		private int checkKey(char k){
			switch (k){
			case '0':return 0; break;
			case '1':return 1; break;
			case '2':return 2; break;
			case '3':return 3; break;
			case '4':return 4; break;
			case '5':return 5; break;
			case '6':return 6; break;
			case '7':return 7; break;
			case '8':return 8; break;
			case '9':return 9; break;

			case '+': flag = 0;return -1;break;
			case '-': flag = 1;return -1;break;
			case '/': flag = 2;return -1;break;
			case '*': flag = 3;return -1;break;
			default : break;
			}
		}

	}
}
