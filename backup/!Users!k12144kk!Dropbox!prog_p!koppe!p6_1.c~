#include <stdio.h>
int main(void)
{
  int sum,num,i;
  printf("数値の合計が1000を超えるまで入力してください=>");
  scanf("%d",&sum);

  for (num=0;sum<1000;)//合計値が1000以上になったら抜け出すループを作る
    {
      printf("%d + ",sum);   //入力された今の合計値を表示
      scanf("%d",&num);      //プラスしていく数を入力
      sum += num;            //合計値にプラスする
    }

  printf("1000を超えました合計値は[%d]です\n",sum);
  return 0;
}
