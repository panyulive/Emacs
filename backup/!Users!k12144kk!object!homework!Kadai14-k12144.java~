package vehicles.sub;

public class BikeCar extends vehicles.Car
{
	private static int Bussum = 0; 
	private String place;

	public BikeCar(){
		Bussum++;
		System.out.println("バイクを作成しました");
	}
	public BikeCar(int n,double g,String c){	
		super(n,g);
		wheel = 2;
		Bussum++;
		place = c;
		System.out.println("形状"+place+"のバイクを作成しました");
	}
	public void setPlace(String c){
		place = c;
		System.out.println("コース番号"+place+"にしました");
	}

	public void newShow(){
		System.out.println("バスのナンバーは"+num+"です");
		System.out.println("ガソリン量は"+gas+"です");
		System.out.println("形状は"+place+"です");
	}
	public static void newShowSum(){
		System.out.println("車は"+sum+"台作成され、バイクは"+Bussum+"台作成されました。");	
	}

	public String BikeCar(){

		String str = "ナンバー"+num+":ガソリン"+gas;


		return str;
	}
	
}
