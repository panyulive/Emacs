import processing.gainer.*;
Gainer gainer;
PFont myFont;

int[] array0 = new int[0];

int col;
int i = 40;
int j = 200;

int input0;
int input1;
int input2;

int flag = 0;
void setup(){
	size(600, 230);
	gainer = new Gainer(this);
	myFont = loadFont("CourierNewPSMT-48.vlw");
	textFont(myFont, 30);
	frameRate(30);
	//gainer.ampGainAGND(0x4);
}

void draw(){
	background(120);
	gainer.peekAnalogInput();
	input0 = gainer.analogInput[0];
	input1 = gainer.analogInput[1];
	input2 = gainer.analogInput[2];

	text("input 0 ="+input0,40,80);
	text("input 1 ="+input1,40,120);
	text("input 2 ="+input2,40,160);
	text("hoge",i,j);

if (input1 >=130 && input1 <= 150){
  
	}else if ( input1 < 130){
		if (i == 0){
  flag = 1;
}else {
  flag = 0;
  i -= 1;
}
	}
	else if (input1 > 150){
  if( i == 250){
    flag = 1;
  }else {
    flag = 0;
			i += 1;
  }
		}
if (input0 >= 140 && input0 <= 170){
}else if (input0 < 140){
  if (j >= 250){
  flag = 1;
  }else {
  j -= 1;
 flag = 0; 
  }
}else if (input0 > 170){
  if (j == 0){
    flag = 1;
  }else {
    flag = 0;
 j += 1; 
}
}
	
gianer.amalogOutput(0,flag * 255);
}
