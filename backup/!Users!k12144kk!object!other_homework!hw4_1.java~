class Circle2
{
		int r;
		int x;
		int y;
		void setR(int pr){
				if(pr<0){
						System.out.println("”¼Œa‚ªƒ}ƒCƒiƒX‚Å‚·D");
				}
				else{
						r = pr;
				}
		}
		void setXY(int px,int py){
				x = px;
				y = py;
		}
		void setXYR(int px,int py,int pr){
				x = px;
				y = py;
				r = pr;
		}
		double area(){
				return r * r * Math.PI;
		}
		void show(){
				System.out.print("xÀ•W‚Í" + x );
				System.out.print(" yÀ•W‚Í" + y );
				System.out.print(" ”¼Œa‚Í" + r );
				System.out.println(" –ÊÏ‚Í" + (r * r * Math.PI) + "‚Å‚ ‚éD");
		}
								
}

class K4_1
{
  
	boolean comp(Circle2 c){
		Circle2 r = new Circle2();
		if( r.r == c.r ) {
			return true;
		}
		else{
			return false;
		}
	}
	boolean intersect(Circle2 c){
		return false;
		return true;
	}
	public static void main(String [] args)
	{
		Circle2 a1 = new Circle2();
		a1.setXY(1,2);
		a1.setR(3);
		System.out.println("‰~ a1:");
		a1.show();
		
		
		Circle2 a2 = new Circle2();
		a2.setXY(10,20);
		a2.setR(3);
		System.out.println("‰~ a2:");
		a2.show();
		
		Circle2 a3 = new Circle2();
		a3.setXY(5,6);
		a3.setR(5);
		System.out.println("‰~ a3:");
		a3.show();
		
		comp(a2);
		comp(a3);
	}
}
