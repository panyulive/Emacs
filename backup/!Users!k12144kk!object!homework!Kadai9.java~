class Car{
	public	int num;
	public double gas;
	public static int sum = 0;

	void show()
	{
		System.out.println("車のナンバーは" +num+ "です。");
		System.out.println("ガソリン量は" +gas+ "です。");
	}
		void showCar(){
			System.out.println("これから車の情報を表示します");
			show();
	}

	void setNum(int n){
		num = n;
		System.out.println("ナンバーを" +num+ "にしました。");
	}
	void setGas(double g){
		gas = g;
		System.out.println("ガソリン量を"+gas+"にしました。");
	}
	public void setNumGas(int n,double g){
		if (g > 0 && g < 1000){ 					num = n;
			gas = g;
			System.out.println("車のナンバーを" +num+"にガソリン量を"+gas+"にしました。");
		}else {
			System.out.println(g+"は...");
			System.out.println("...を変更できません");
		}
	}
	int getNum(){
		System.out.println("ナンバーを調べました。");
		return num;
	}
	
	
	double getGas(){
		System.out.println("ガソリンを調べました。");
		return gas;
	}


	/////////////////////////////////
	//ここからjava9
	//////////////////////////////////

	public void setCar(int n){
		num = n;
		System.out.println("ナンバーを" +num+ "にしました。");
	} 
	public void setCar(double g){
	gas = g;
		System.out.println("ガソリン量を"+gas+"にしました。");
} 
	public void setCar(int n,double g){
		if (g >= 0 && g <= 1000){ 		
			num = n;
			gas = g;
			System.out.println("車のナンバーを" +num+"にガソリン量を"+gas+"にしました。");
		}else {
			System.out.println(g+"は...");
			System.out.println("...を変更できません");
		}
	}
	
	//これでナンバーとガソリン量の無いCarは作れない
	public Car(){
		num = 0; 
		gas = 0.0;
		System.out.println("車を作成しました。");
		sum++;
	}
	
	public Car(int n,double g){
		this();	
		num = n;
		gas = g;
		System.out.println("ナンバーを"+num+"ガソリン量を"+gas+"で作成しました");
	}
		/////////////////////////////
		//ここから別の授業の続き
		////////////////////////////
	
	
	public static void showSum(){
		System.out.println("車は全部で"+sum+"台あります。");
	}

}

class RacingCar extends Car
{
	private static int Rcsum = 0; 
	private int course;

	public RacingCar(){
		Rcsum++;
		course = 0;
		System.out.println("レーシングカーを作成しました");
	}
	public RacingCar(int n,double g,int c){	
		super(n,g);
		Rcsum++;
		course = c;
		System.out.println("コース番号"+course+"のレーシングカーを作成しました");
	}
	public void setCourse(int c){
		course = c;
		System.out.println("コース番号"+course+"にしました");
	}

	public void newShow(){
		System.out.println("レーシングカーのナンバーは"+num+"です");
		System.out.println("ガソリン量は"+gas+"です");
		System.out.println("コース番号は"+course+"です");
	}
	public static void newShowSum(){
		System.out.println("車は"+sum+"台作成され、レーシングカーは"+Rcsum+"台作成されました。");	
}

}

class BusCar extends Car
{
	private static int Bussum = 0; 
	private String place;

	public BusCar(){
		Bussum++;
		place = "";
		System.out.println("バスを作成しました");
	}
	public BusCar(int n,double g,String c){	
		super(n,g);
		Bussum++;
		place = c;
		System.out.println("目的地"+place+"行きのバスを作成しました");
	}
	public void setPlace(String c){
		place = c;
		System.out.println("コース番号"+place+"にしました");
	}

	public void newShow(){
		System.out.println("バスのナンバーは"+num+"です");
		System.out.println("ガソリン量は"+gas+"です");
		System.out.println("目的地は"+place+"です");
	}
	public static void newShowSum(){
		System.out.println("車は"+sum+"台作成され、バスは"+Bussum+"台作成されました。");	
}

}class TruckCar extends Car
{
	private static int Trsum = 0; 
	private double weight;

	public TruckCar(){
		Trsum++;
		weight = 0;
		System.out.println("トラックを作成しました");
	}
	public TruckCar(int n,double g,double c){	
		super(n,g);
		Trsum++;
		weight = c;
		System.out.println("最大積載量は"+weight+"tです。");
	}
	public void setWeight(double c){
		weight = c;
		System.out.println("最大積載量は"+weight+"にしました");
	}

	public void newShow(){
		System.out.println("トラックのナンバーは"+num+"です");
		System.out.println("ガソリン量は"+gas+"です");
		System.out.println("最大積載量は"+weight+"tです");
	}
	public static void newShowSum(){
		System.out.println("車は"+sum+"台作成され、トラックは"+Trsum+"台作成されました。");	
}

}

class Kadai9{
	public static void main(String[] args){
		Car.showSum();

		RacingCar rccar1 = new RacingCar(1234,20.5,5);
		BusCar bus1 = new BusCar(2345,30.0,"名古屋駅");
		TruckCar truck1 = new TruckCar(3456,55.5,4.0);

		rccar1.newShow();
		bus1.newShow();
		truck1.newShow();

		RacingCar.newShowSum();
		BusCar.newShowSum();
		TruckCar.newShowSum();

		RacingCar rccar2 = new RacingCar();
		BusCar bus2 = new BusCar();
		TruckCar truck2 = new TruckCar();
		
		rccar2.setCar(4567,0.0);
		rccar2.setCourse(1);

		bus2.setCar(4567,10.0);
		bus2.setPlace("栄");

		truck2.setCar(4567,76.6);
		truck2.setWeight(8.0);

		rccar2.newShow();
		bus2.newShow();
		truck2.newShow();

		RacingCar.newShowSum();
		BusCar.newShowSum();
		TruckCar.newShowSum();
	}
}
